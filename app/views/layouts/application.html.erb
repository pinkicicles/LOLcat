<!DOCTYPE html> 
<html>
  <head>
    <title>Peer-to-Peer Cooking and Catering</title>
    <%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/redmond/jquery-ui.css", "application" %>
    <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.14/jquery-ui.min.js", "application" %>
  </head>
  <div class="row">
	<div class="nine columns">
  		<body>
        <div id="container">
        <% if alert %>
          <div class="alert alert-error"> 
            <%= alert %>
          </div>
        <% end %>
        <% if notice %>
          <div class="alert alert-success"> 
            <%= notice %>
          </div>
          <% end %>

          <% if user_signed_in? %> <li><%= link_to 'Logout',
              destroy_user_session_path,
              method: :delete %></li> 
          <% end %>
    		<%= yield %>
      </div>
  		</body>

		</div>
	</div>
</html>
